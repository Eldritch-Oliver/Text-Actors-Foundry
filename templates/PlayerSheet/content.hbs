<div class="content">
	{{#if editable}}
		<prose-mirror
			class="actor-text"
			name="system.content"
			value="{{system.content}}"
			collaborate="true"
			data-document-uuid="{{actor.uuid}}"
			toggled="true"
		>
			{{{ enriched.system.content }}}
		</prose-mirror>
	{{else}}
		{{{ enriched.system.content }}}
	{{/if}}
</div>